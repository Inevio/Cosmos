
{

    "name"    : "Cosmos",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : ["service.js"],

            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "main.html",

                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 996,
                        "min"     : 996,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 638,
                        "min"     : 638,
                        "max"     : 0

                    },

                    "css"    : [ "style.css" , "spinkit.css" ],
                    "script" : [ "script/build/desktop.js" , "autoResize.js"],
                    "start"  : [ "start.js" ]

                },

                "newPost" : {

                  "template" : "newPost.html",

                  "maxizable" : false,
                  "resizable" : false,

                  "width"  : {

                      "default" : 529,
                      "min"     : 529,
                      "max"     : 0

                  },

                  "height" : {

                      "default" : 360,
                      "min"     : 360,
                      "max"     : 0

                  },

                  "css"    : [ "newPost.css" ],
                  "script" : [ "newPost.js" ],
                  "start"  : [ "newPostStart.js" ]

                },

                "inviteByMail" : {

                  "template" : "inviteByMail.html",

                  "maxizable" : false,
                  "resizable" : false,

                  "width"  : {

                      "default" : 408,
                      "min"     : 408,
                      "max"     : 0

                  },

                  "height" : {

                      "default" : 438,
                      "min"     : 438,
                      "max"     : 0

                  },

                  "css"    : [ "inviteByMail.css" ],
                  "script" : [ "inviteByMail.js" ],
                  "start"  : []

                }

            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : ["service.js"],

            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "mainMobile.html",

                    "css"    : [ "style.css" ],
                    "script" : [ "script/build/mobile.js" , "autoResize.js" , "newPostMobile.js"],
                    "start"  : [ "start.js" ]


                }

            }

        }

    },

    "permission" : {

        "channel" : true,
        "user" : {

            "read" : true

        },
        "fs"      : {

            "create" : true,
            "modify" : true,
            "read"   : true

        },
        "service": true,
        "upload" : {

            "avatar"    : true,
            "wallpaper" : true

        }

    }

}
